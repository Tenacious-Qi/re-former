<%= form_with(model: @user) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  
  <%= form.label :username %>
  <%= form.text_field :username, placeholder: "enter a username here" %>
  <%= form.label :email %>
  <%= form.email_field :email, placeholder: "e.g., person@email.com"%>
  <%= form.label :password%>
  <%= form.password_field :password, placeholder: "strong password" %>
  <%= form.submit "Submit" %>
<% end %>